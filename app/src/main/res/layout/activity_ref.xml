<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ref">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is it mandatory to apply with referral code?"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="No,it's an optional and you can apply with a referral code in case you have one or simply move ahead in case you din't have one."/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray"
            android:layout_marginTop="200dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Was this FAQ helpful?"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:textColor="@color/black"
                android:text="NO"
                android:onClick="NO"
                android:textSize="15dp"
                android:layout_marginTop="35dp"
                tools:ignore="OnClick" />
            <Button
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                android:textColor="@color/black"
                android:text="YES"
                android:onClick="YES"
                android:textSize="15dp"
                android:layout_marginTop="35dp"/>
        </FrameLayout>
    </LinearLayout>


</LinearLayout>